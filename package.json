{
  "name": "saralflow",
  "displayName": "SaralFlow",
  "description": "Auto generate code changes from story description",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "SaralFlow.showGraph",
        "title": "Show Code Semantic Graph"
      },
      {
        "command": "SaralFlow.queryGraphForLLM",
        "title": "SaralFlow: Query Graph for LLM Context"
      },
      {
        "command": "SaralFlow.proposeCodeFromStory",
        "title": "SaralFlow: Propose Code From Story"
      },
      {
        "command": "SaralFlow.openGenerator",
        "title": "SaralFlow: Open Code Generator"
      }
    ],
    "configuration": {
      "title": "SaralFlow Configuration",
      "properties": {
        "saralflow.cloudFunctions.generateCodeUrl": {
          "type": "string",
          "default": "https://us-central1-saralflowapis.cloudfunctions.net/generateCode",
          "description": "The URL for the SaralFlow 'generateCode' Cloud Function."
        },
        "saralflow.cloudFunctions.generateEmbeddingUrl": {
          "type": "string",
          "default": "https://us-central1-saralflowapis.cloudfunctions.net/generateEmbedding",
          "description": "The URL for the SaralFlow 'generateEmbedding' Cloud Function."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && npm run lint && node esbuild.js && npm run copy-webview",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production && npm run copy-webview",
    "copy-webview": "cpx \"./webview/**/*\" ./dist/webview",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "cpx": "^1.5.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "vsce": "^2.11.0"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "firebase": "^12.0.0",
    "marked": "^16.1.1",
    "node-fetch": "^2.7.0",
    "openai": "^5.10.2"
  }
}
